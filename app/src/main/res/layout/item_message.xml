<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/bg_market">

    <ImageView
        android:id="@+id/img_msg_type"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="9dp"
        android:src="@mipmap/icon_msg_fund"/>

    <TextView
        android:id="@+id/txt_msg_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="资金消息"
        android:textColor="#313131"
        android:textSize="16sp"
        android:layout_toRightOf="@id/img_msg_type"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-10-10 7:18:36"
        android:textColor="#898989"
        android:textSize="11sp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/txt_msg_type"
        android:layout_marginRight="13dp"/>

    <TextView
        android:id="@+id/txt_msg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您已成功充值2000元，可在资金管理中明细。"
        android:textSize="12sp"
        android:lineSpacingMultiplier="1.2"
        android:textColor="#898989"
        android:layout_marginRight="13dp"
        android:layout_alignLeft="@id/txt_msg_type"
        android:layout_below="@id/txt_msg_type"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"/>

</RelativeLayout>